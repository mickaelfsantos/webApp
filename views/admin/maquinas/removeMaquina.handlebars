<div class="container-fluid pl-4 pr-4">
  
    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    
    <h2>Máquina</h2>
    
        
    <div class="card mt-4">
        <div class="card-body">
            <form action="" id="form" name="getMaquina" method="POST" class="m-0">
                <input type="hidden" name="id" id="id" value="{{maquina._id}}"> 

                <label for="nome">Nome: {{maquina.nome}}</label>
                <br>

                <label for="departamento" class="mt-3">Departamento: {{maquina.departamento}}</label>
                <br>

                <label for="funcao" class="mt-3">Função: {{maquina.funcao}}</label>
                <br>

                <label for="cargo" class="mt-3">Custo (€/h): {{maquina.custo}}€</label>
                <br> 
                
                <div class="row justify-content-end">
                    <button type="submit" class="btn btn-danger mt-3 mr-3"><i class="fa fa-trash"></i> Remover</button>
                </div>


        </div>
    </div>
</div>

<script>
    var funcionario = document.getElementById('id').getAttribute("value");
    document.getFuncionario.action = "/funcionario/"+funcionario+"/remove";
</script>