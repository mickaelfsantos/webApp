    <div class="container-fluid mt-4">
    <div id="comeca" style="font-family: Palatino Linotype; padding:5%">
        <div class="row">
            <table>
                <thead>
                    <tr>
                        <th style="text-align: left;"><img style="height: 20%; width:20%"src="https://www.isec.pt/assets_isec/logo-isec-transparente.png"></th>
                    </tr>
                </thead>
            </table>
        </div>


        <br>
        <h2>Lista de obras</h2>
        <br>



        {{#each obras}}
            <h4>Obra {{nome}}</h4>
            <table style="width: 100%">
                <thead>
                <tr>
                    <th style="width: 15%; text-align:left">Tarefas</th>
                    <th style="width: 36%; text-align:left">Datas previstas</th>
                    <th style="width: 36%; text-align:left">Datas</th>
                    <th style="width: 13%; text-align:left">Despesa</th>
                </tr>
                </thead>
                <tbody>
                    {{#each tarefas}}
                        <tr>
                            <td style="width: 15%;">{{nome}}</td>
                            <td style="width: 36%;">{{dateToString dataPrevistaInicio}} - {{dateToString dataPrevistaFim}}</td>
                            <td style="width: 36%;">{{dateToString dataInicio}} - {{dateToString dataFim}}</td>
                            <td style="width: 13%;">{{precoToString despesa}}</td>
                        </tr>
                    {{else}}

                    {{/each}}
                
                </tbody>
            </table>
            <hr>
            <table style="width: 100%">
                <thead>
                    <tr>
                        <th style="width: 15%; text-align:left">Total</td>
                        <td style="width: 36%;"></td>
                        <td style="width: 36%;"></td>
                        <td style="width: 13%;">{{despesa}}</td>
                    </tr>
                </thead>
            </table>

            <br>
            <br>
            <br>
        {{/each}}
    </div>

    <br id="finish">
</div>