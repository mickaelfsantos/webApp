<h2>Nova tarefa</h2>
<h5 id="nomeObra">Obra {{nome}}</h5>
<div class="card mt-5">
    <div class="card-body">
        <form action="/obras/"+palavras[1]+"/addTarefa" name="getObra" method="POST" function="chgAction()">
            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome" placeholder="Nome da tarefa" class="form-control mb-4">

            <label for="descricao">Descrição</label>
            <textarea class="form-control mb-4" name="descricao" id="exampleFormControlTextarea1" rows="3" placeholder="Descrição da obra"></textarea>

            <div class="form-group">
                <label for="funcionarios">Funcionarios a associar</label>
                <select multiple class="form-control" id="funcionarios">
                <option>1</option>
                <option>2</option>
                </select>
            </div>

            <label for="dataPrevistaInicio">Data prevista para inicio</label>
            <input type="date" name="dataPrevistaInicio" id="dataPrevistaInicio" class="form-control mb-4" min="0">
            <button type="submit" class="btn btn-dark">Concluir</button>
        </form>
    </div>
</div>

<script>    
    var obra = document.getElementById('nomeObra').textContent;
    var palavras = obra.split(" ");
    document.getObra.action = "/obras/"+palavras[1]+"/addTarefa";
</script>