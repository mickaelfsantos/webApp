<div class="container-fluid pl-r pr-4">
    
    <h2>Nova máquina</h2>
    
    <div class="card mt-4">
        <div class="card-body">
            <label for="nome" style="opacity: 0.5;">*Campos de preenchimento obrigatório</label>
            <form action="/maquinas/add" method="POST">
                <label for="nome">Nome*</label>
                {{#if erros.nome}}
                    <input type="text" id="nome" name="nome" value="{{nomeO}}" placeholder="Nome da máquina" class="form-control is-invalid">
                    <div class="invalid-feedback mb-4">
                        {{erros.nome}}
                    </div>
                {{else}}
                    <input type="text" id="nome" name="nome" value="{{nomeO}}" placeholder="Nome da máquina" class="form-control mb-4">
                {{/if}}


                <label for="departamento">Função*</label>
                {{#if erros.funcao}}
                    <input type="text" id="funcao" name="funcao" value="{{funcao}}" placeholder="Função da máquina" class="form-control is-invalid">
                    <div class="invalid-feedback mb-4">
                        {{erros.funcao}}
                    </div>
                {{else}}
                    <input type="text" id="funcao" name="funcao" value="{{funcao}}" placeholder="Função da máquina" class="form-control mb-4">
                {{/if}}
                
                <label for="departamento">Departamento*</label>
                {{#if erros.departamento}}
                    <input type="text" id="departamento" name="departamento" value="{{departamento}}" placeholder="Departamento da obra" class="form-control is-invalid">
                    <div class="invalid-feedback mb-4">
                        {{erros.departamento}}
                    </div>
                {{else}}
                    <input type="text" id="departamento" name="departamento" value="{{departamento}}" placeholder="Departamento da obra" class="form-control mb-4">
                {{/if}}

                {{#ifImAdmin}}
                    <label for="custo">Custo por hora (€)*</label>
                    {{#if erros.custo}}
                        <input type="text" id="custo" name="custo" value="{{custo}}" placeholder="Custo da máquina" class="form-control is-invalid">
                        <div class="invalid-feedback mb-4">
                            {{erros.custo}}
                        </div>
                    {{else}}
                        <input type="text" id="custo" name="custo" value="{{custo}}" placeholder="Custo da máquina" class="form-control mb-4">
                    {{/if}}
                {{/ifImAdmin}}
                
                <div class="row justify-content-end">
                    <button type="submit" class="btn btn-success mt-3 mr-4"><i class="fa fa-check"></i> Concluir</button>
                    <button type="button" onclick="saltaParaMaquinas()" class="btn btn-danger mt-3 mr-3"><i class="fa fa-close"></i> Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function saltaParaMaquinas(){
        window.location = "/maquinas";
    }
</script>