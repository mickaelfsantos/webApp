<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.4/jspdf.min.js"></script>

<div class="container-fluid pr-4 pl-4">
    <h2 id="nomeFuncionario">Editar perfil</h2>
    
        
    <div class="card mt-4">
        <div class="card-body">
            <label for="nome" style="opacity: 0.5;">*Campos de preenchimento obrigatório</label>
            <form action="/perfil/edit" enctype="multipart/form-data" method="POST">
                <input type="hidden" id="id" value="{{funcionario._id}}">

                <label for="nome">Nome*</label>
                {{#if erros.nome}}
                    <input type="text" id="nome" name="nome" value="{{funcionario.nome}}" class="form-control is-invalid">
                    <div class="invalid-feedback mb-4">
                        {{erros.nome}}
                    </div>
                {{else}}
                    <input type="text" id="nome" name="nome" value="{{funcionario.nome}}" class="form-control mb-4">
                {{/if}}
                
                <label for="equipa">Email*</label>
                {{#if erros.email}}
                    <input type="email" id="email" name="email" value="{{funcionario.email}}" class="form-control is-invalid">
                    <div class="invalid-feedback mb-4">
                        {{erros.email}}
                    </div>
                {{else}}
                    <input type="email" id="email" name="email" value="{{funcionario.email}}" class="form-control mb-4">
                {{/if}}
                
                <label for="password">Password</label>
                {{#if erros.password}}
                    <input type="password" id="password" name="password"class="form-control is-invalid">
                    <div class="invalid-feedback mb-4">
                        {{erros.password}}
                    </div>
                {{else}}
                    <input type="password" id="password" name="password"class="form-control mb-4">
                {{/if}}

                <label for="password2">Confirmação da password</label>
                {{#if erros.password2}}
                    <input type="password" id="password2" name="password2" class="form-control is-invalid">
                    <div class="invalid-feedback mb-4">
                        {{erros.password2}}
                    </div>
                {{else}}
                    <input type="password" id="password2" name="password2" class="form-control mb-4">
                {{/if}}
                
                <label for="foto">Foto de perfil</label>
                <input type="file" class="form-control-file mb-4" name="file" id="file" placeholder="Foto">
                
                <div class="row justify-content-end">
                    <button type="submit" class="btn btn-success mt-3 mr-4"><i class="fa fa-check"></i> Concluir</button>
                    <button type="button" onclick="saltaParaPerfil()" class="btn btn-danger mt-3 mr-3"><i class="fa fa-close"></i> Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function saltaParaPerfil(){
        window.location.href = "/perfil";
    }

</script>